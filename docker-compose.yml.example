version: '3.8'

services:
  pdf-service:
    build: .
    ports:
      - "8000:8000"
    volumes:
      - ./app:/app/app
      - ./uploads:/app/uploads
      - ./static:/app/static
    environment:
      # 版面解析 API 地址
      - LAYOUT_PARSING_API_URL=${LAYOUT_PARSING_API_URL}
    container_name: ai_agent_support_service
    restart: unless-stopped 